-- Initial SGXTools.cabal generated by cabal init.  For further
-- documentation, see http://haskell.org/cabal/users-guide/

name:                SGXTools
version:             0.1.0.0
synopsis:            Tools to interact with SGX data files
-- description:
license:             BSD3
license-file:        LICENSE
author:              Yogesh Swami
maintainer:          yogesh.swami@securesubstrates.com
-- copyright:
category:            System
build-type:          Simple
extra-source-files:  ChangeLog.md
cabal-version:       >=1.10

executable sgxTools
  main-is:             SGXTools.hs
  other-modules:       SGXToolsCmdOptions
                     , SGXTools.Types
                     , SGXTools.Marshalling
                     , SGXTools.IntelSignedEnclave
                     , SGXTools.Utils
                     , SGXTools.WhiteList
  ghc-options: -O2
  -- other-extensions:
  build-depends:       base       >=4.10 && <4.11
                     , optparse-applicative >= 0.14.2.0
                     , bytestring >= 0.10.8.2
                     , binary
                     , ansi-wl-pprint
                     , unix
                     , memory
                     , cryptonite
                     , mtl
                     , vector
                     , elf-edit
  hs-source-dirs:      src
  default-language:    Haskell2010
